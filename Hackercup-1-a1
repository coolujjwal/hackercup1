#include <iostream>
#include <bits/stdc++.h>

using namespace std;

#define ll long long int
#define ld long double
#define MAX 200010
#define MOD 1000000007
#define INF 1e15
#define fast ios::sync_with_stdio(0);cin.tie(0);cout.tie(0);
#define pi 3.14159265358979323846
#define endl "\n"
#define coutflg if(flg){cout << "YES\n";}else{cout << "NO\n";}
#define coutyes cout << "YES\n";
#define coutno cout << "NO\n";
#define flush fflush(stdout);
#define fixedprec cout << fixed << setprecision(18);

void solve(){
    ll n;
    cin >> n;
    string a;
    cin >> a;
    ll i = 0;
    ll hand = 0;
    ll ans = n+1;
    ll tmp = 0;
    while(i<n){
        if(a[i]=='F'){
            i++;
            int fuck=0;
            fuck++;
        }
        else if(a[i]=='X'){
            if(hand){
                hand = 1-hand;
                tmp++;
            }
            else{
                i++;
            }
        }
        else{
            if(!hand){
                hand = 1-hand;
                tmp++;
            }
            else{
                i++;
            }
        }
    }
    ans = tmp;
    hand = 1;
    tmp = 0;
    i = 0;
    while(i<n){
        if(a[i]=='F'){
            i++;
        }
        else if(a[i]=='X'){
            if(hand){
                hand = 1-hand;
                tmp++;
            }
            else{
                i++;
            }
        }
        else{
            if(!hand){
                hand = 1-hand;
                tmp++;
            }
            else{
                i++;
            }
        }
    }
    ans = min(ans,tmp);
    cout << ans << endl;
}

int main(){
    fast
    ll t,q;
    q = 1;
    cin >> q;
    for(t=1;t<=q;t++){
        cout << "Case #" << t << ": ";
        solve();
    }
}
